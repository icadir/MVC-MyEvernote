@using MyEvernote.Entities.Messages
@using MyEvernote.WebApp.ViewModels.BilgilendirmeSayfalari
@model ErrorViewModel
@{
    ViewBag.Title = Model.Tittle;
}



<link href="~/Content/login-register.css" rel="stylesheet" />


<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header </h1>
            </div>
            <div class="main-content">

                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Tittle</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (ErrorMessagaObj msg in Model.Items)
                        {
                            @msg.Message;<br />
                        }
                    </p>
                </div>

            </div>
        </div>
    </div>
</section>
@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function (){ window.location = '" + Model.RedirectingUrl + "';}," + Model.RedirectingTimeout + ");";
    }
}


<script>
    $(function () {
        $("footer").parent.hide();

        @Html.Raw(js);
    });

</script>
