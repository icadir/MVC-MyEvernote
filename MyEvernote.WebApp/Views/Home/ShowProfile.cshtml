@using MyEvernote.Entities
@model EvernoteUser

@{
    ViewBag.Title = "Profiliniz";
}


<div class="container">

    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row">

        <div class="col-md-2">
            <img src="~/images/@Model.ProfileImageFilename" class="img-circle" width="128" height="128" />
        </div>

        <div class="col-md-10">
            <h3>@(Model.Name + " " + Model.Surname)</h3>
            <br />
            <h5><b>@Html.DisplayNameFor(model => model.Username) : </b>@Model.Username</h5>
            <h5><b>@Html.DisplayNameFor(model => model.Email) : </b>@Model.Email</h5>
            <br />
            <h5><a href="#">More... </a></h5>
        </div>


        <div class="col-md-2 text-right">
            <div class="btn-group">
                <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="">
                    <span class="glyphicon glyphicon-cog">&nbsp; </span>
                    Options
                    <span class="icon-cog icon-white">&nbsp; </span><span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="@Url.Action("EditProfile")">
                            <span class="glyphicon glyphicon-edit">&nbsp;</span>
                            Modify
                        </a>
                    </li>
                    <li> <a href="@Url.Action("DeleteProfile")" onclick="return confirm('Hesabınızı silmek istediginize eminmisiniz. ');"><span class="glyphicon glyphicon-trash">&nbsp;</span>Delete</a></li>
                </ul>
            </div>

        </div>
    </div>
</div>

<script>

</script>